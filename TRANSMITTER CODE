#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

RF24 radio(9, 10);      // CE, CSN
const byte address[6] = "00001";

int xPin = A0;
int yPin = A1;

int command = 0;

void setup() {
  Serial.begin(9600);

  radio.begin();
  radio.openWritingPipe(address);
  radio.setPALevel(RF24_PA_MIN);
  radio.stopListening();
}

void loop() {
  int xVal = analogRead(xPin);
  int yVal = analogRead(yPin);

  int deadzone = 150;

  bool forward  = (yVal < 512 - deadzone);
  bool backward = (yVal > 512 + deadzone);
  bool right    = (xVal > 512 + deadzone);
  bool left     = (xVal < 512 - deadzone);

  if (forward)       command = 1;
  else if (backward) command = 2;
  else if (right)    command = 3;
  else if (left)     command = 4;
  else               command = 0;

  radio.write(&command, sizeof(command));

  Serial.print("Sent: ");
  Serial.println(command);

  delay(40);
}
